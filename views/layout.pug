doctype html
html
  head
    meta(charset='UTF-8')
    meta(name='author', content='Linh Hong')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    script(src="/javascripts/init.js")
    title= title
    link(rel='stylesheet', href='/stylesheets/custom.css')
  body
    nav(class='navbar navbar-expand-sm navbar-dark bg-dark')
      div(class='container-fluid')
        a(class="navbar-brand", href="/")="Logo"
        button(class="navbar-toggler", type="button", data-bs-toggle="collapse", data-bs-target="#mynavbar")
          span(class="navbar-toggler-icon")
        div(class="collapse navbar-collapse", id="mynavbar")
          ul(class="navbar-nav me-auto")
            li(class="nav-item dropdown")
              if isEditActive
                a(class=`nav-link active dropdown-toggle`, role="button", href="#", data-bs-toggle="dropdown", aria-expanded="false") Edit
                ul(class="dropdown-menu")
                  li
                    a(class="dropdown-item", href="#", role="button", data-bs-toggle="modal", data-bs-target="#addNewColumnFormModal") Add a new Column
                  li
                    a(class="dropdown-item", href="/edit") Reset
                  li
                    hr(class="dropdown-divider")
                  li
                    a(class="dropdown-item", href="#", role="button", data-bs-toggle="modal", data-bs-target="#saveOnePageFormModal") Save
              else 
                a(class=`nav-link`, href="/edit") Edit
            li(class="nav-item dropdown")
              a(class=`nav-link dropdown-toggle`, role="button", href="#", data-bs-toggle="dropdown", aria-expanded="false") Config 
              ul(class="dropdown-menu")
                li
                  a(class="dropdown-item", href="javascript:exportOnePageToJSON()") Export
                  li
                    hr(class="dropdown-divider")
                li
                  a(class="dropdown-item", href="#", role="button", data-bs-toggle="modal", data-bs-target="#importConfigFileModal") Import
    block content
    form(name="importOnePageConfigFileForm")
      div(class="modal fade", id="importConfigFileModal", data-bs-backdrop="static", data-bs-keyboard="false", tabindex="-1", aria-labelledby="importConfigFileModal_Label", aria-hidden="true")
        div(class="modal-dialog")
          div(class="modal-content")
            div(class="modal-header")
              h1(class="modal-title fs-5", id="importConfigFileModal_Label")="Import JSON OnePage config file"
              button(type="button", class="btn-close", data-bs-dismiss="modal", aria-label="Close")
            div(class="modal-body")
              p="Import JSON file to indexedDB of browser"
              form
                div(class="input-group mb-3")
                  input(class="form-control", type="file", id="importConfigFileModal_input", aria-describedby="importConfigFileModal_inputaddon", aria-label="Upload", onchange="uploadFile(this)")
            div(class="modal-footer")
              input(type="hidden", readonly, name="importOnePageConfigFileForm_onePageData")
              button(type="button", class="btn btn-light", data-bs-dismiss="modal")="Close"
              button(type="button", class="btn btn-primary", name="importConfigModal_SaveBut", data-bs-dismiss="modal")="Save"
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js", integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4", crossorigin="anonymous")
